{
  "name": "chainlink-issue-tracker",
  "displayName": "Chainlink Issue Tracker",
  "description": "A simple, lean issue tracker for AI-assisted development",
  "version": "0.5.1",
  "publisher": "Dollspace-gay",
  "icon": "images/icon.png",
  "engines": {
    "vscode": "^1.109.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "issue tracker",
    "task management",
    "AI development",
    "session management"
  ],
  "activationEvents": [
    "onStartupFinished",
    "workspaceContains:.chainlink"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "chainlink.init",
        "title": "Chainlink: Initialize Project"
      },
      {
        "command": "chainlink.sessionStart",
        "title": "Chainlink: Start Session"
      },
      {
        "command": "chainlink.sessionEnd",
        "title": "Chainlink: End Session"
      },
      {
        "command": "chainlink.sessionStatus",
        "title": "Chainlink: Session Status"
      },
      {
        "command": "chainlink.sessionWork",
        "title": "Chainlink: Set Working Issue"
      },
      {
        "command": "chainlink.sessionAction",
        "title": "Chainlink: Record Action Breadcrumb"
      },
      {
        "command": "chainlink.sessionLastHandoff",
        "title": "Chainlink: Show Last Handoff Notes"
      },
      {
        "command": "chainlink.daemonStart",
        "title": "Chainlink: Start Daemon"
      },
      {
        "command": "chainlink.daemonStop",
        "title": "Chainlink: Stop Daemon"
      },
      {
        "command": "chainlink.daemonStatus",
        "title": "Chainlink: Daemon Status"
      },
      {
        "command": "chainlink.listIssues",
        "title": "Chainlink: List Issues"
      },
      {
        "command": "chainlink.createIssue",
        "title": "Chainlink: Create Issue"
      },
      {
        "command": "chainlink.quickCreate",
        "title": "Chainlink: Quick Create (Create + Label + Work)"
      },
      {
        "command": "chainlink.createWithTemplate",
        "title": "Chainlink: Create from Template"
      },
      {
        "command": "chainlink.createSubissue",
        "title": "Chainlink: Create Subissue"
      },
      {
        "command": "chainlink.showIssue",
        "title": "Chainlink: Show Issue Details"
      },
      {
        "command": "chainlink.updateIssue",
        "title": "Chainlink: Update Issue"
      },
      {
        "command": "chainlink.closeIssue",
        "title": "Chainlink: Close Issue"
      },
      {
        "command": "chainlink.closeAllIssues",
        "title": "Chainlink: Close All Issues"
      },
      {
        "command": "chainlink.reopenIssue",
        "title": "Chainlink: Reopen Issue"
      },
      {
        "command": "chainlink.deleteIssue",
        "title": "Chainlink: Delete Issue"
      },
      {
        "command": "chainlink.addComment",
        "title": "Chainlink: Add Comment"
      },
      {
        "command": "chainlink.addLabel",
        "title": "Chainlink: Add Label"
      },
      {
        "command": "chainlink.removeLabel",
        "title": "Chainlink: Remove Label"
      },
      {
        "command": "chainlink.blockIssue",
        "title": "Chainlink: Block Issue"
      },
      {
        "command": "chainlink.unblockIssue",
        "title": "Chainlink: Unblock Issue"
      },
      {
        "command": "chainlink.readyIssues",
        "title": "Chainlink: Show Ready Issues"
      },
      {
        "command": "chainlink.blockedIssues",
        "title": "Chainlink: Show Blocked Issues"
      },
      {
        "command": "chainlink.relateIssues",
        "title": "Chainlink: Relate Issues"
      },
      {
        "command": "chainlink.unrelateIssues",
        "title": "Chainlink: Unrelate Issues"
      },
      {
        "command": "chainlink.nextIssue",
        "title": "Chainlink: Suggest Next Issue"
      },
      {
        "command": "chainlink.treeView",
        "title": "Chainlink: Show Issue Tree"
      },
      {
        "command": "chainlink.searchIssues",
        "title": "Chainlink: Search Issues"
      }
    ],
    "configuration": {
      "title": "Chainlink Issue Tracker",
      "properties": {
        "chainlink.binaryPath": {
          "type": "string",
          "default": "",
          "description": "Override path to the chainlink binary (for development/debugging). Leave empty to use bundled binary."
        },
        "chainlink.autoStartDaemon": {
          "type": "boolean",
          "default": true,
          "description": "Automatically start the daemon when a .chainlink project is detected."
        },
        "chainlink.showOutputChannel": {
          "type": "boolean",
          "default": false,
          "description": "Show output channel for daemon logs."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run build:binaries && npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "lint": "eslint src --ext ts",
    "package": "vsce package",
    "build:binaries": "node scripts/build-binaries.js"
  },
  "devDependencies": {
    "@types/node": "^25.2.2",
    "@types/vscode": "^1.109.0",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "eslint": "^9.0.0",
    "typescript": "^5.9.3",
    "@vscode/vsce": "^3.7.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dollspace-gay/chainlink"
  },
  "bugs": {
    "url": "https://github.com/dollspace-gay/chainlink/issues"
  },
  "homepage": "https://github.com/dollspace-gay/chainlink#readme",
  "license": "MIT"
}
